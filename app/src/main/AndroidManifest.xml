<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="eu.profinit.pml">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true">
        <activity
            android:name=".ui.login.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.ProfinitMoneyLearning.Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.plandashboard.PlanDashboardActivity"
            android:theme="@style/Theme.ProfinitMoneyLearning.App"/>

        <activity android:name=".ui.detail.PlanDetailActivity"
            android:theme="@style/Theme.ProfinitMoneyLearning.App"/>

        <activity android:name=".ui.newplan.NewPlanActivity"
            android:theme="@style/Theme.ProfinitMoneyLearning.App"/>
    </application>

</manifest>